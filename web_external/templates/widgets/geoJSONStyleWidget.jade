            | Stroke
      #m-line-stroke-control.m-optional-panel.collapse(class={in: line.stroke})
        .panel-body
          +range('Width', 0, 5, 0.1, line, 'line', 'strokeWidth', line.stroke)
          +color('Color', line, 'line', 'strokeColor', line.stroke, 'strokeColorKey')
