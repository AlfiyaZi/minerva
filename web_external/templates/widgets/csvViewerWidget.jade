.modal-dialog.m.table-main-container
    .modal-content
        form#m-add-csv-viewer-form.modal-form(role="form")
            .modal-header
                button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
                h4.modal-title
                    | CSV Viewer

                .form-group
                    label.control-label(for="m-longitude") Longitude
                    select.form-control.input-sm#m-longitude
                        each column in columns
                            option(value='#{column.title}') #{column.title}
                .form-group
                    label.control-label(for="m-latitude") Latitude
                    select.form-control.input-sm#m-latitude
                        each column in columns
                            option(value='#{column.title}') #{column.title}

            .m-tableDataContainer
                .m-ableDataContainerHeader
                    h4.modal-title.csv-title
                        | #{title}
                .m-table-container
                    table.table-hover#data


            .modal-footer
                a.btn.btn-small.btn-default(data-dismiss="modal") Cancel
                button.m-update-dataset.btn.btn-small.btn-primary(type="submit")
                    i.icon-check
                    | Save
