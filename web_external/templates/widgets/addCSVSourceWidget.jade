include uploadWidgetMixins

.modal-dialog
  .modal-content
    form#m-upload-form.modal-form(role="form")
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title= title
          | Upload CSV File
        +g-upload-widget-subtitle
      .modal-body
        .form-group
          label.control-label(for="m-csv-name") Title
          input.input-sm#m-csv-name.form-control(type="text", placeholder="Enter CSV source title")
        +g-upload-widget-browse-or-drop
        +m-upload-widget-progress
        .form-group
          label.control-label(for="m-number-rows") Number of rows
          .radio.m-number-rows
            ul
              li
                input(type="radio", select="all", name="m-select-rows", checked="true")
                | Show all
              li
                input(type="radio", select="custom", name="m-select-rows")
                | Custom

                input#m-csv-number-rows.form-control(type='number', name='csv-rows', min='1')

      .modal-footer
        a.btn.btn-small.btn-default(data-dismiss="modal") Close
        +m-upload-widget-start-button
