.m-session-header
  if (accessLevel  >= girder.AccessType.WRITE)
    .btn-group.pull-right
      button.m-session-actions-button.btn.btn-default.dropdown-toggle(
          data-toggle="dropdown", title="Session actions")
        i.icon-menu
        |  Actions
        i.icon-down-dir
      ul.m-session-actions-menu.dropdown-menu.pull-right(role="menu")
        li(role="presentation")
          a.m-edit-session(role="menuitem")
            i.icon-edit
            | Edit info
        li(role="presentation")
          a.m-edit-baselayer(role="menuitem")
            i.icon-plus
            | Edit base layer
        if (accessLevel  >= girder.AccessType.ADMIN)
          li.divider(role="presentation")
          li(role="presentation")
            a.m-minerva-access-control(role="menuitem")
              i.icon-lock
              | Access control
          li(role="presentation")
            a.m-delete-session(role="menuitem")
              i.icon-trash
              | Delete session

  .m-session-title= session.get('name')
  .m-session-description= session.get('description')

.gridster
  ul
    li.dataPanel&attributes({'data-row': '1', 'data-col': '1', 'data-sizex': '1', 'data-sizey': '2'})
    li.layersPanel&attributes({'data-row': '1', 'data-col': '2', 'data-sizex': '1', 'data-sizey': '2'})
    li.mapPanel&attributes({'data-row': '1', 'data-col': '3', 'data-sizex': '3', 'data-sizey': '4'})
    li.geometryPanel&attributes({'data-row': '3', 'data-col': '1', 'data-sizex': '1', 'data-sizey': '2'})
    li.analysisPanel&attributes({'data-row': '3', 'data-col': '2', 'data-sizex': '1', 'data-sizey': '2'})
